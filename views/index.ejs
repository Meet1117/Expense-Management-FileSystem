<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Daily Expense Tracker</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Remix Icon -->
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />

    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#f0f9ff',
                            100: '#e0f2fe',
                            200: '#bae6fd',
                            300: '#7dd3fc',
                            400: '#38bdf8',
                            500: '#0ea5e9',
                            600: '#0284c7',
                            700: '#0369a1',
                            800: '#075985',
                            900: '#0c4a6e'
                        },
                        secondary: {
                            50: '#f8fafc',
                            100: '#f1f5f9',
                            200: '#e2e8f0',
                            300: '#cbd5e1',
                            400: '#94a3b8',
                            500: '#64748b',
                            600: '#475569',
                            700: '#334155',
                            800: '#1e293b',
                            900: '#0f172a'
                        }
                    },
                    animation: {
                        'fade-in': 'fadeIn 0.5s ease-in-out',
                        'slide-in': 'slideIn 0.4s ease-out',
                        'fade-up': 'fadeUp 0.6s ease-out'
                    },
                    keyframes: {
                        fadeIn: { '0%': { opacity: 0 }, '100%': { opacity: 1 } },
                        slideIn: { '0%': { transform: 'translateY(20px)', opacity: 0 }, '100%': { transform: 'translateY(0)', opacity: 1 } },
                        fadeUp: { '0%': { transform: 'translateY(40px)', opacity: 0 }, '100%': { transform: 'translateY(0)', opacity: 1 } }
                    }
                }
            }
        }
    </script>

    <style>
        body { 
            font-family: 'Inter', system-ui; 
            transition: background-color .3s, color .3s; 
        }
        .theme-transition * { 
            transition: background-color .3s, border-color .3s, color .3s; 
        }
        .card-hover { 
            transition: all .3s ease; 
        }
        .card-hover:hover { 
            transform: translateY(-5px); 
            box-shadow: 0 10px 25px -5px rgba(0,0,0,0.1); 
        }
        .nav-shadow { 
            box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05), 0 2px 4px -1px rgba(0,0,0,0.03); 
        }
        .btn-hover { 
            transition: all .3s ease; 
        }
        .btn-hover:hover { 
            transform: translateY(-2px); 
        }
        .record-card { 
            transition: transform .3s, box-shadow .3s; 
            cursor: pointer;
        }
        .record-card:hover { 
            transform: translateY(-8px); 
        }
        .modal-backdrop { 
            backdrop-filter: blur(4px); 
            background: rgba(0,0,0,0.4); 
        }
        .view-card {
            position: relative;
        }
        .view-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(79, 70, 229, 0.05);
            border-radius: 0.5rem;
            opacity: 0;
            transition: opacity 0.3s ease;
            pointer-events: none;
        }
        .record-card:hover .view-overlay {
            opacity: 1;
        }
        .view-text {
            position: absolute;
            bottom: 1rem;
            right: 1rem;
            background: #4f46e5;
            color: white;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.75rem;
            opacity: 0;
            transform: translateY(10px);
            transition: all 0.3s ease;
        }
        .record-card:hover .view-text {
            opacity: 1;
            transform: translateY(0);
        }
    </style>
</head>
<body class="bg-gradient-to-br from-primary-50 to-secondary-50 dark:from-secondary-900 dark:to-secondary-800 min-h-screen theme-transition overflow-x-hidden relative">
    <!-- Navbar -->
    <nav class="flex px-6 md:px-10 justify-between items-center py-5 bg-white dark:bg-secondary-800 nav-shadow sticky top-0 z-20">
        <div class="flex items-center gap-3">
            <div class="bg-primary-500 p-2 rounded-lg"><i class="ri-pie-chart-2-line text-white text-xl"></i></div>
            <h3 class="text-2xl font-bold text-secondary-900 dark:text-white">Daily Expense Tracker</h3>
        </div>
        <div class="flex gap-5 items-center">
            <a href="/" class="text-secondary-600 dark:text-secondary-300 hover:text-primary-500 font-medium">Dashboard</a>
            <a href="/create" class="bg-primary-500 hover:bg-primary-600 text-white px-4 py-2 rounded-lg btn-hover flex items-center gap-2 shadow-md"> <i class="ri-add-line"></i> New Record</a>
            <button id="themeToggle" class="theme-toggle bg-secondary-100 dark:bg-secondary-700 p-2 rounded-full text-secondary-700 dark:text-yellow-300"><i class="ri-sun-line text-lg"></i></button>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="w-full max-w-6xl mx-auto pb-20">
        <section class="px-6 md:px-10 py-8 animate-fade-in">
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
                <div class="animate-fade-up">
                    <h1 class="text-3xl font-bold text-secondary-900 dark:text-white">Expense Records</h1>
                    <p class="text-secondary-600 dark:text-secondary-400 mt-1">Track and manage your daily expenses</p>
                </div>
                <div class="flex gap-3 animate-fade-up" style="animation-delay:.1s">
                    <button class="bg-white dark:bg-secondary-800 border border-secondary-200 dark:border-secondary-700 px-4 py-2 rounded-lg flex items-center gap-2 btn-hover"> <i class="ri-filter-line"></i> Filter</button>
                    <button class="bg-white dark:bg-secondary-800 border border-secondary-200 dark:border-secondary-700 px-4 py-2 rounded-lg flex items-center gap-2 btn-hover"> <i class="ri-sort-desc"></i> Sort</button>
                </div>
            </div>

            <!-- Records Section -->
            <div class="bg-white dark:bg-secondary-800 rounded-xl shadow-sm border border-secondary-200 dark:border-secondary-700 overflow-hidden animate-fade-up">
                <div class="px-6 py-5 border-b border-secondary-200 dark:border-secondary-700">
                    <h2 class="text-xl font-semibold text-secondary-900 dark:text-white">Available Records</h2>
                </div>
                <div class="p-6">
                    <% if (files.length === 0) { %>
                        <div class="empty-state rounded-xl p-10 text-center">
                            <div class="mx-auto w-16 h-16 rounded-full bg-indigo-100 dark:bg-indigo-900/30 flex items-center justify-center mb-5"><i class="ri-folder-open-line text-primary-500 dark:text-indigo-400 text-2xl"></i></div>
                            <h3 class="text-xl font-semibold text-secondary-700 dark:text-secondary-300">No expense records yet</h3>
                            <p class="text-secondary-500 dark:text-secondary-400 mt-2 max-w-md mx-auto">Get started by creating your first expense record.</p>
                            <a href="/create" class="mt-6 inline-block bg-primary-500 hover:bg-primary-600 text-white px-6 py-3 rounded-lg btn-hover shadow-md"> <i class="ri-add-line"></i> Create New Record</a>
                        </div>
                    <% } else { %>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
                            <% files.forEach((file,index) => { %>
                                <div class="view-card">
                                    <div 
                                        class="record-card bg-gradient-to-br from-white to-secondary-50 dark:from-secondary-800 dark:to-secondary-900/70 rounded-lg p-5 border border-secondary-200 dark:border-secondary-700 shadow-sm animate-slide-in" 
                                        style="animation-delay: 0.05s;"
                                        onclick="window.location.href='/read/<%=file%>'"
                                    >
                                        <div class="flex justify-between items-start">
                                            <div class="flex items-center gap-3">
                                                <div class="bg-indigo-100 dark:bg-indigo-900/30 p-3 rounded-lg"><i class="ri-file-text-line text-primary-500 dark:text-indigo-400 text-xl"></i></div>
                                                <div>
                                                    <h3 class="font-semibold text-secondary-900 dark:text-white"><%=file%></h3>
                                                    <p class="text-sm text-secondary-500 dark:text-secondary-400 mt-1">Created: 2023-10-<%=15+index%></p>
                                                </div>
                                            </div>
                                            <div class="text-xs px-2 py-1 rounded-full bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300 font-medium">Active</div>
                                        </div>
                                        <div class="flex gap-3 mt-6">
                                            <a href="/edit/<%=file%>" class="flex-1 text-center bg-white dark:bg-secondary-800 border border-primary-500 text-primary-500 dark:text-primary-300 hover:bg-primary-50 px-4 py-2 rounded-lg btn-hover"> <i class="ri-edit-line"></i> Edit</a>
                                            <a href="/delete/<%=file%>" class="flex-1 text-center bg-white dark:bg-secondary-800 border border-red-300 dark:border-red-700 text-red-500 dark:text-red-400 hover:bg-red-50 px-4 py-2 rounded-lg btn-hover"> <i class="ri-delete-bin-line"></i> Delete</a>
                                        </div>
                                    </div>
                                    <div class="view-overlay"></div>
                                    <div class="view-text">Click to View Details</div>
                                </div>
                            <% }) %>
                        </div>
                    <% } %>
                </div>
            </div>
        </section>
        <footer class="mt-16 text-center text-secondary-500 dark:text-secondary-400 text-sm px-6 animate-fade-in">
            <p>© 2023 Daily Expense Tracker. All rights reserved.</p>
            <p class="mt-2">Designed with <i class="ri-heart-fill text-pink-500 dark:text-pink-400"></i> for better financial management</p>
        </footer>
    </main>

    <!-- Delete Confirmation Modal -->
    <div id="deleteModal" class="fixed inset-0 hidden flex items-center justify-center z-50">
        <div class="modal-backdrop absolute inset-0"></div>
        <div class="relative z-50 bg-white dark:bg-secondary-800 rounded-lg shadow-xl p-6 w-11/12 max-w-sm text-center animate-fade-in">
            <i class="ri-alert-line text-4xl text-red-500 mb-4"></i>
            <h3 class="text-xl font-semibold text-secondary-900 dark:text-white mb-2">Confirm Deletion</h3>
            <p class="text-secondary-600 dark:text-secondary-400 mb-6">Are you sure you want to delete this record?</p>
            <div class="flex justify-center gap-4">
                <button id="confirmDelete" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg btn-hover">Delete</button>
                <button id="cancelDelete" class="bg-gray-200 dark:bg-secondary-700 hover:bg-gray-300 dark:hover:bg-secondary-600 text-secondary-800 dark:text-secondary-200 px-4 py-2 rounded-lg btn-hover">Cancel</button>
            </div>
        </div>
    </div>

    <script>
        // Theme toggle
        const themeToggle = document.getElementById('themeToggle');
        const themeIcon = themeToggle.querySelector('i');
        const prefersDarkScheme = window.matchMedia('(prefers-color-scheme: dark)');
        const currentTheme = localStorage.getItem('theme');
        if (currentTheme === 'dark' || (!currentTheme && prefersDarkScheme.matches)) {
            document.documentElement.classList.add('dark');
            themeIcon.classList.replace('ri-sun-line','ri-moon-line');
        } else {
            themeIcon.classList.replace('ri-moon-line','ri-sun-line');
        }
        themeToggle.addEventListener('click', () => {
            const isDark = document.documentElement.classList.toggle('dark');
            themeIcon.classList.replace(isDark?'ri-sun-line':'ri-moon-line',isDark?'ri-moon-line':'ri-sun-line');
            localStorage.setItem('theme', isDark?'dark':'light');
        });
        
        // Delete confirmation logic
        const deleteLinks = document.querySelectorAll('a[href^="/delete/"]');
        const modal = document.getElementById('deleteModal');
        const confirmBtn = document.getElementById('confirmDelete');
        const cancelBtn = document.getElementById('cancelDelete');
        let targetHref = null;
        deleteLinks.forEach(link => {
            link.addEventListener('click', e => {
                e.preventDefault();
                e.stopPropagation();
                targetHref = link.href;
                modal.classList.remove('hidden');
            });
        });
        confirmBtn.addEventListener('click', () => window.location.href = targetHref);
        cancelBtn.addEventListener('click', () => { modal.classList.add('hidden'); targetHref = null; });
        
        // Prevent card click when clicking on buttons
        document.querySelectorAll('.record-card a').forEach(button => {
            button.addEventListener('click', e => {
                e.stopPropagation();
            });
        });
    </script>
</body>
</html>